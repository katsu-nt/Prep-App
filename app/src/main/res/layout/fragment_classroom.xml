<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fmClassroom"
    tools:context=".Fragment.Teacher.ClassroomFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddClassroom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_add_24"
            android:backgroundTint="@color/black"
            android:layout_marginLeft="10sp"/>

        <EditText
            android:id="@+id/edtSearchByID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="id"
            android:background="@color/light_gray"
            android:drawableStart="@drawable/baseline_search_24"
            android:drawablePadding="10dp"
            android:hint="Search by ID"
            android:inputType="number"
            android:padding="15dp"
            android:textSize="8pt" />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/ic_launcher" />

    </LinearLayout>

    <GridView
        android:id="@+id/grVClassroom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:numColumns="2"
        tools:listitem="@layout/grid_view_classroom_item_layout"/>
</LinearLayout>