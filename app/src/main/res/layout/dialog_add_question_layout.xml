<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvQuestionContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/edtQuestionContent"
            android:text="Content"
            android:textSize="12pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtQuestionContent"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvQuestionContent"
            android:autofillHints="question content"
            android:background="@color/light_gray"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="12dp"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/tvAnswerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtQuestionContent"
            android:labelFor="@id/edtAnswerA"
            android:text="Answer A"
            android:textSize="10pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtAnswerA"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAnswerA"
            android:autofillHints="question content"
            android:background="@color/light_gray"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="8pt" />


        <TextView
            android:id="@+id/tvAnswerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtAnswerA"
            android:labelFor="@id/edtAnswerB"
            android:text="Answer B"
            android:textSize="10pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtAnswerB"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAnswerB"
            android:autofillHints="question content"
            android:background="@color/light_gray"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/tvAnswerC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtAnswerB"
            android:labelFor="@id/edtAnswerC"
            android:text="Answer C"
            android:textSize="10pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtAnswerC"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAnswerC"
            android:autofillHints="question content"
            android:background="@color/light_gray"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/tvAnswerD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtAnswerC"
            android:labelFor="@id/edtAnswerD"
            android:text="Answer D"
            android:textSize="10pt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtAnswerD"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAnswerD"
            android:autofillHints="question content"
            android:background="@color/light_gray"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="8pt" />

        <RadioGroup
            android:id="@+id/rdgCorrectAnswer"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/vEnd"
            android:layout_below="@id/edtQuestionContent"
            android:layout_toEndOf="@id/edtAnswerA"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rdoAnswerA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rdoAnswerB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rdoAnswerC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rdoAnswerD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_weight="1" />

        </RadioGroup>

        <View
            android:id="@+id/vEnd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/edtAnswerD" />

    </RelativeLayout>

</ScrollView>